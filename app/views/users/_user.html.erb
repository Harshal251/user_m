<table>
<thead>
<tr>
<th>User_Id</th>
<th>Username</th>
<th>Email</th>
<th>No. of Articles</th>

<th colspan="3"> Actions</th>
</tr>
</thead>

<tbody>
  <% @user.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.articles.length %></td>
     <td><%= link_to "Show", user_path(user) %></td>
    <td><%= link_to "Edit", edit_user_path(user) %></td>
    <td> <%= link_to "Delete", user_path(user), data: { turbo_method: :delete, turbo_confirm: "All Information Assocciated With This User Will Be Deleted!!!
                                           \nDo You Want to Continue? " } %></td>
  </tr>
  <% end %>
</tbody>
</table>