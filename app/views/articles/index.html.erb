<h1>Articles listing page</h1>
<table>
<thead>
<tr>
<th>Title</th>
<th>Description</th>
<th>Actions</th>
</tr>
</thead>

<tbody>
  <% @articles.each do |article|%>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.discription %></td>
  
    <td> <%= link_to 'Delete',article_path(article), data:{turbo_method: :delete , turbo_confirm: "Are you Sure?"}  %></td>
  </tr>
  <% end %>
</tbody>
</table>